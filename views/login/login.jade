extends ../layout

block body
    h2.text-center 登录

    form.form-horizontal(name="login-form", method="post", action="/user/login")
        div.form-group
            lable.col-sm-2.control-label(for="username") 用户名
            div.col-sm-8
                input.form-control(name="username", type="text", placeholder="用户名")
        div.form-group
            lable.col-sm-2.control-label(for="password") 密码
            div.col-sm-8
                input.form-control(name="password", type="password", placeholder="密码")
        div.form-group
            div.col-sm-offset-2.col-sm-8    
                button(type="submit") 提交