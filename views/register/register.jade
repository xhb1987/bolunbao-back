extends ../layout

block body
    h2.text-center 注册用户

    form.form-horizontal(name="register-form", method="post", action="/user/register")
        div.form-group
            lable.col-sm-2.control-label(for="username") 用户名
            div.col-sm-8
                input.form-control(name="username", type="text", placeholder="用户名")
        div.form-group
            lable.col-sm-2.control-label(for="password") 密码
            div.col-sm-8
                input.form-control(name="password", type="password", placeholder="密码")
        div.form-group
            lable.col-sm-2.control-label(for="passwordConfirm") 密码确认
            div.col-sm-8
                input.form-control(name="passwordConfirm", type="password", placeholder="密码确认")
        div.form-group
            lable.col-sm-2.control-label(for="email") 电子邮箱
            div.col-sm-8
                input.form-control(name="email", type="email", placeholder="电子邮箱")
        div.form-group
            lable.col-sm-2.control-label(for="phone") 手机号码
            div.col-sm-8
                input.form-control(name="phone", type="phone", placeholder="手机号码")
        div.form-group
            div.col-sm-offset-2.col-sm-8    
                button(type="submit") 提交